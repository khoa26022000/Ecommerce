<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegisterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Primary"

            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-29dp">
            <RelativeLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/Main_BG">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/button_right_radius">

                    <TextView
                        android:id="@+id/textlog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"

                        android:text="Register"
                        android:textSize="25dp">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textlog"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Access account"
                        android:textSize="18dp">

                    </TextView>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/top"
                android:background="@drawable/left_top_radius">

                <TextView
                    android:id="@+id/textfullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="54dp"
                    android:layout_marginTop="15dp"
                    android:text="Full Name"
                    android:textColor="@color/Primary_Font"
                    android:textSize="18dp"></TextView>

                <EditText
                    android:id="@+id/inputfullname"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_below="@+id/textfullname"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_btn_radius"
                    android:hint="Full Name"
                    android:padding="15dp"
                    android:textColor="@color/Primary_Font"
                    android:textColorHint="@color/hint">

                </EditText>

                <TextView
                    android:id="@+id/textemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/inputfullname"
                    android:layout_marginLeft="54dp"
                    android:layout_marginTop="15dp"
                    android:text="Email"
                    android:textColor="@color/Primary_Font"
                    android:textSize="18dp"></TextView>

                <EditText
                    android:id="@+id/inputemail"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_below="@+id/textemail"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_btn_radius"
                    android:hint="sample@email.com"
                    android:padding="15dp"
                    android:textColor="@color/Primary_Font"
                    android:textColorHint="@color/hint">

                </EditText>

                <TextView
                    android:id="@+id/password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/inputemail"
                    android:layout_marginLeft="54dp"
                    android:layout_marginTop="15dp"
                    android:text="Password"
                    android:textColor="@color/Primary_Font"
                    android:textSize="18dp"></TextView>

                <EditText
                    android:id="@+id/inputPass"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_below="@+id/password"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_btn_radius"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="15dp"
                    android:textColor="@color/Primary_Font"
                    android:textColorHint="@color/hint">

                </EditText>

                <TextView
                    android:id="@+id/textpass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/inputPass"
                    android:layout_marginLeft="54dp"
                    android:layout_marginTop="15dp"
                    android:text="Comfirm password"
                    android:textColor="@color/Primary_Font"
                    android:textSize="18dp"></TextView>

                <EditText
                    android:id="@+id/inputPassConfirm"
                    android:layout_width="300dp"
                    android:layout_height="55dp"
                    android:layout_below="@+id/textpass"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_btn_radius"
                    android:hint="Comfirm Password"
                    android:inputType="textPassword"
                    android:padding="15dp"
                    android:textColor="@color/Primary_Font"
                    android:textColorHint="@color/hint"></EditText>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="420dp"
                    android:orientation="horizontal"

                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true">

                        <Button
                            android:id="@+id/register"
                            android:layout_width="140dp"
                            android:layout_height="60dp"
                            android:layout_below="@+id/inputlogin"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/button_yellow"
                            android:text="REGISTER">

                        </Button>

                        <Button
                            android:id="@+id/back"
                            android:layout_width="140dp"
                            android:layout_height="60dp"
                            android:layout_below="@+id/register"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/button_yellow"
                            android:text="BACK">

                        </Button>
                    </LinearLayout>
                </RelativeLayout>

            </RelativeLayout>

            <ProgressBar
                android:visibility="gone"
                android:id="@+id/proo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

            </ProgressBar>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>